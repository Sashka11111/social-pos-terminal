<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="380" maxWidth="280" minHeight="350" minWidth="220" prefHeight="360.0"
  prefWidth="240.0"
  style="-fx-background-color: white; -fx-background-radius: 20px; -fx-effect: dropshadow(gaussian, rgba(2, 87, 38, 0.15), 15, 0.25, 0, 4); -fx-border-color: rgba(162, 213, 163, 0.4); -fx-border-width: 2px; -fx-border-radius: 20px;"
  xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.liamtseva.cafepossystem.presentation.controller.MenuItemCard">
  <children>
    <VBox alignment="TOP_CENTER" spacing="12.0" AnchorPane.bottomAnchor="0.0"
      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <children>
        <ImageView fx:id="menuImage" fitHeight="113.0" fitWidth="117.0" preserveRatio="true"
          style="-fx-effect: dropshadow(gaussian, rgba(2, 87, 38, 0.2), 8, 0.3, 0, 2);">
          <image>
            <Image url="@../data/ingredients.png"/>
          </image>
        </ImageView>

        <VBox alignment="CENTER" spacing="6.0" style="-fx-padding: 0 16;">
          <children>
            <Label fx:id="menuItemName" alignment="CENTER" maxWidth="200.0"
              style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d3748;"
              textAlignment="CENTER" wrapText="true">
              <font>
                <Font size="16.0"/>
              </font>
            </Label>

            <Label fx:id="menuItemPrice" alignment="CENTER"
              style="-fx-text-fill: #025726; -fx-font-size: 20px; -fx-font-weight: bold;"
              text="0.00 грн" textAlignment="CENTER">
              <font>
                <Font size="20.0"/>
              </font>
            </Label>

            <Label fx:id="menuItemCalories" alignment="CENTER"
              style="-fx-text-fill: #718096; -fx-font-size: 12px;" text="0 ккал"
              textAlignment="CENTER">
              <font>
                <Font size="12.0"/>
              </font>
            </Label>
          </children>
        </VBox>

        <HBox alignment="CENTER" spacing="8.0" style="-fx-padding: 0 16;">
          <children>
            <Spinner fx:id="quantity" prefHeight="38.0" prefWidth="90.0"
              style="-fx-font-size: 14px;"/>
            <Button onAction="#showDetails" prefHeight="38.0" prefWidth="110.0"
              style="-fx-background-color: rgba(2, 87, 38, 0.1); -fx-text-fill: #025726; -fx-font-weight: 600; -fx-background-radius: 10px; -fx-border-color: #025726; -fx-border-width: 1.5px; -fx-border-radius: 10px; -fx-cursor: hand;"
              text="Деталі">
              <font>
                <Font size="13.0"/>
              </font>
            </Button>
          </children>
        </HBox>

        <Button fx:id="addToCartButton" maxWidth="Infinity" prefHeight="35.0" prefWidth="180.0"
          style="-fx-font-size: 15px; -fx-font-weight: bold;" styleClass="side-btn"
          stylesheets="@../design/style.css" text="Додати в кошик" textFill="WHITE">
          <font>
            <Font size="15.0"/>
          </font>
          <VBox.margin>
            <Insets left="16.0" right="16.0"/>
          </VBox.margin>
        </Button>
      </children>
      <padding>
        <Insets bottom="16.0" left="0.0" right="0.0" top="16.0"/>
      </padding>
    </VBox>
  </children>
</AnchorPane>
