<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="220.0" prefWidth="385.0" styleClass="alert-card" stylesheets="@../design/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.liamtseva.cafepossystem.presentation.controller.AlertController">
  <children>
    <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="14.0" layoutY="14.0">
      <image>
        <Image url="@../data/icon.png" />
      </image>
    </ImageView>
    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="85.0" layoutY="20.0" prefHeight="27.0" prefWidth="216.0" styleClass="alert-title" text="Повідомлення" textAlignment="CENTER">
      <font>
        <Font name="Georgia" size="18.0" />
      </font>
    </Label>
    <Button fx:id="closeButton" layoutX="345.0" layoutY="14.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="21.0" styleClass="close-button" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
      <graphic>
        <ImageView fitHeight="27.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
          <image>
            <Image url="@../data/close.png" />
          </image>
        </ImageView>
      </graphic>
    </Button>
    <Label fx:id="messageLabel" alignment="CENTER" layoutX="18.0" layoutY="68.0" prefHeight="78.0" prefWidth="349.0" styleClass="alert-message" textAlignment="CENTER" wrapText="true">
      <font>
        <Font name="Georgia" size="12.0" />
      </font>
    </Label>
    <Button layoutX="139.0" layoutY="162.0" onAction="#handleOkAction" prefHeight="40.0" prefWidth="106.0" styleClass="alert-primary-btn" text="OK">
      <font>
        <Font size="18.0" />
      </font>
    </Button>
  </children>
</AnchorPane>
