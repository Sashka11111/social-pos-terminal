<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" stylesheets="@../design/social-tables.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.liamtseva.cafepossystem.presentation.controller.SocialTablesController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label styleClass="title-label" text="Спільні столики" />
      <HBox spacing="20.0" VBox.vgrow="ALWAYS">
         <children>
            <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="174.0" prefWidth="491.0" styleClass="social-scroll" HBox.hgrow="ALWAYS">
               <content>
                  <VBox fx:id="socialOrdersContainer" spacing="15.0" />
               </content>
            </ScrollPane>
            <VBox fx:id="infoPanel" prefHeight="174.0" prefWidth="384.0" spacing="15.0" styleClass="card">
               <children>
                  <Label styleClass="info-title" text="Статистика" />
                  <Label fx:id="totalSocialOrdersLabel" styleClass="info-label" text="Спільних столиків: 0" />
                  <Label fx:id="currentDateTimeLabel" styleClass="info-label" text="Поточний час: --" />
                  <Label fx:id="activeOrdersLabel" styleClass="info-label" text="Активних замовлень: 0" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
