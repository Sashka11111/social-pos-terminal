<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER_LEFT" maxHeight="160" minHeight="140" prefHeight="150.0" prefWidth="520.0"
  spacing="0" styleClass="cart-item-card-horizontal" stylesheets="@../design/style.css"
  xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.liamtseva.cafepossystem.presentation.controller.CartItemCard">
  <children>
    <VBox alignment="CENTER">
      <children>
        <ImageView fx:id="menuImage" fitHeight="110.0" fitWidth="110.0" preserveRatio="true"
          styleClass="cart-item-image-h">
          <image>
            <Image url="@../data/ingredients.png"/>
          </image>
        </ImageView>
      </children>
      <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
      </padding>
    </VBox>

    <VBox alignment="TOP_LEFT" spacing="8.0" HBox.hgrow="ALWAYS">
      <padding>
        <Insets bottom="12.0" left="16.0" right="16.0" top="12.0"/>
      </padding>
      <children>
        <HBox alignment="TOP_LEFT" spacing="10.0">
          <children>
            <VBox spacing="4.0" HBox.hgrow="ALWAYS">
              <children>
                <Label fx:id="menuItemName" maxWidth="280.0" styleClass="cart-item-name-h"
                  wrapText="true"/>
                <HBox alignment="CENTER_LEFT" spacing="8.0">
                  <children>
                    <Label fx:id="menuItemCalories" styleClass="cart-item-calories-h"
                      text="0 ккал"/>
                  </children>
                </HBox>
              </children>
            </VBox>

            <VBox alignment="CENTER">
              <children>
                <Label fx:id="quantityLabel" styleClass="quantity-number" text="0"/>
              </children>
              <padding>
                <Insets bottom="6.0" left="10.0" right="10.0" top="6.0"/>
              </padding>
            </VBox>
          </children>
        </HBox>

        <Region prefHeight="0.0" prefWidth="350.0" VBox.vgrow="ALWAYS"/>

        <HBox alignment="CENTER_LEFT" spacing="12.0">
          <children>
            <HBox alignment="CENTER" spacing="6.0" styleClass="cart-price-badge">
              <children>
                <Label fx:id="menuItemPrice" styleClass="cart-item-price-h" text="0.00 грн"/>
              </children>
              <padding>
                <Insets bottom="6.0" left="12.0" right="12.0" top="6.0"/>
              </padding>
            </HBox>

            <Region HBox.hgrow="ALWAYS"/>

            <Button onAction="#showDetails" styleClass="cart-info-btn">
              <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true"
                  preserveRatio="true">
                  <image>
                    <Image url="@../data/details.png"/>
                  </image>
                </ImageView>
              </graphic>
            </Button>
            <Button fx:id="deleteFromCartButton" styleClass="cart-remove-btn">
              <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true"
                  preserveRatio="true">
                  <image>
                    <Image url="@../data/delete.png"/>
                  </image>
                </ImageView>
              </graphic>
            </Button>
          </children>
        </HBox>
      </children>
    </VBox>
  </children>
</HBox>
